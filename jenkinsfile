pipeline {

    agent any

    stages {

        stage('Build') {

            steps {

           echo "build"    

                sh "javac Helloworld.java"

            }

        }

        stage('execute') {

            steps {

               echo "test"

                sh "java Helloworld"

            }

        }

        stage('Deploy') {

            steps {

              echo "deploy"

            }

        }
        stage ('success'){
            steps {
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
             post {
        failure {
            script {
                currentBuild.result = 'FAILURE'
            }
        }

        always {
            step([$class: 'Mailer',
                notifyEveryUnstableBuild: true,
                recipients: "vincentrayapati8@gmail.com",
                sendToIndividuals: true])
        }
    }

    }
    }

}
